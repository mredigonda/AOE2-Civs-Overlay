{
    "name": "aoe2-civs-overlay",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "electron .",
        "start-test": "electron test-windows.js",
        "dist": "electron-builder",
        "dist-windows": "electron-builder --win portable --x64",
        "dist-windows-debug": "electron-builder --win portable --x64 --debug",
        "setup-python": "cd python-experiment-rapidocr && python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt"
    },
    "build": {
        "appId": "com.maxredigonda.aoe2-civs-overlay",
        "productName": "AOE2 Civs Overlay",
        "win": {
            "target": "portable",
            "icon": "icon.ico"
        },
        "files": [
            "**/*",
            "!node_modules/**/*",
            "!dist/**/*",
            "!.git/**/*"
        ],
        "directories": {
            "output": "dist"
        }
    },
    "author": "Maximiliano Redigonda",
    "license": "ISC",
    "devDependencies": {
        "electron": "^37.3.0",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "sharp": "^0.34.3"
    }
}
